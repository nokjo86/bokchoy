<div class="container">
  <h1>Order details</h1>
  <p class = "text-muted font-italic"><%= @order.created_at.to_formatted_s(:long) %></p>
  <table class="table table-sm">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Quantity</th>
        <th scope="col">Price</th>
        <th scope="col">Seller</th>
      </tr>
    </thead>
    <tbody>
      <% @order_items.each do |item| %>
      <% listing = item.listing %>
      <tr>
        <td><%= link_to item.listing.title, listing_path(listing.id) %></td> 
        <td><%= item.quantity %></td>
        <td><%= "$""%.2f" % listing.price %></td>
        <td><%= link_to listing.profile.user.username, profile_path(listing.profile_id) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="placeholder"></div>
