<%= form_with model: listing, local: true do |form| %>
<div class="form-group">
  <%= form.label :title %>
  <%= form.text_field :title, class: "form-control" %>
</div>
<div class="form-group">
  <%= form.label :description %>
  <%= form.text_area :description, class: "form-control" %>
</div>
<div class="form-group row">
  <%= form.label :price, class: "col-sm-2 col-form-label" %>
  <div class="row">
    <div class="col">
      <%= form.number_field :price, min: 0, step: 0.01, class: "form-control" %>
     </div>
     <div class="col">
      <p>per unit<p>
      </div>
  </div>      
</div>
<div class="form-group row">
  <%= form.label :product_type, class:"col-sm-2 col-form-label" %>
  <%= form.collection_select(:product_id, Product.all, :id, :name) %>
</div>
<fieldset class="form-group">
    <div class="row">
      <legend class="col-form-label col-sm-2 pt-0">Delivery Options</legend>
      <div class="col-sm-10">
        <div class="form-check">
          <input class="form-check-input" type="radio" name="listing[delivery]" id="delivery" value="Local Pickup" checked>
          <label class="form-check-label" for="gridRadios1">
            Local Pickup
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="listing[delivery]" id="delivery" value="Delivery">
          <label class="form-check-label" for="gridRadios2">
            Delivery
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="listing[delivery]" id="delivery" value="Both" >
          <label class="form-check-label" for="gridRadios3">
            both
          </label>
        </div>
      </div>
    </div>
  </fieldset>

  <div class="form-group">
  <%= form.label :image %> 
  <%= form.file_field :image, accept: 'image/png,image/gif,image/jpeg,image/jpg', class:"form-control-file" %>
</div>
  <div class="form-group row">
    <div class="col-sm-10">
      <%= form.submit class: "btn btn-success" %>
    </div>
  </div>
<% end %>
